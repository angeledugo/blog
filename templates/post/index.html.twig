{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<section class="container mt-2">
    <div class="card">
        <div class="card-header">

            <h1>Posts</h1>
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.content }}</td>
                        <td>
                            <a href="{{ path('post_show', {'id': post.id}) }}">Mostrar</a>
                            <a href="{{ path('post_edit', {'id': post.id}) }}">editar</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('post_new') }}">Nuevo post</a>
        </div>
    </div>
</section>


{% endblock %}