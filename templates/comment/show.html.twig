{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
<section class="container mt-2">
    <div class="card">
        <div class="card-header">

            <h1>Comentario</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ comment.id }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ comment.content }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary" href="{{ path('comment_index') }}">Volver al listado</a>

            <a class="btn btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

            {{ include('comment/_delete_form.html.twig') }}
        </div>
</section>



{% endblock %}